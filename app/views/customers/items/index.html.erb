<section class="top-section text-center">
<div class="row">
  <div class="col-lg-12 col-lg-offset-1">
    <table class="table table-bordered table-hover text-center ec-genre-list" >
      <tr>
        <td>
          <%= link_to "全商品を表示", items_path, class:"ec-genre-list-item" %>
        </td>
      </tr>
    </table>
	</div>

  <h2 style="margin: 20px 0;">商品一覧(全<%= @items_all.count %>件)</h2>
	<div class="col-lg-12">
		<div class="product-card-content">

		<table class="table table-striped">
		<% @items.each do |item| %>
		<div class="col-xs-3" style="padding-right: 0px; padding-left: 0px; margin: 10px 0;">
			<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
				<%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150" %><br>
				<%= item.name %>
				¥<%= item.price.to_s(:delimited, delimiter: ',') %>
			<% end %>
		</div>
		<% end %>
	  </table>

		</div>
	</div>
</div>
        </div>
</div>
</section>