<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>

<section class="top-section text-center">
<div class="row">
  <div class="col-lg-12 col-lg-offset-1">
	<br>
	<div class="col-lg-12">
		<p class="item-content1"><%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150" %></p>
	</div>

	<div class="col-lg-12">
		<%= form_with model: @cart_item, url: cart_items_path(item_id: @item), method: :post do |form| %>
		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>
	</div>
</div>


	<div class="col-lg-12">

			<p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
				<span></span><%= form.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
		</div>
	
		<div class="col-lg-12">
		  <p><%= form.submit "カートに入れる", class:"btn btn-primary" %></p>
		</div>
		<% end %>
	</div>
</div>
        </div>
</div>
</section>