<section class="top-section text-center">
<div class="row">
  <div class="col-lg-12 col-lg-offset-1">

      <h2>会員情報詳細</h2>
        <table class="table">

            <tr>
              <th>顧客ID</th>
              <td><%= @customer.id %>
              <% if @customer.is_active == false %>
              <span class="label label-primary">
                有効会員
              </span>
              <% else %>
              <span class="label label-danger">
                退会済み
              </span>
              <% end %>
              </td>
            </tr>

            <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %>
              <%= @customer.first_name %></td>
            </tr>

            <tr>
              <th>フリガナ</th>
              <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>

            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
              <th>電話番号</th>
              <td><%= @customer.phone_number %></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
        </table>

          <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-success" %>
          <%= link_to "注文一覧を見る",admins_orders_path, class: "btn btn-success" %>
  </div>
</div>
  </div>
</div>
</section>