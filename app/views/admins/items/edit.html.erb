<section class="top-section text-center">
<div class="row">
  <div class="col-lg-12 col-lg-offset-1">

    <%= form_with model: @item, url: admins_items_path, method: :PATCH, local:true do |f| %>
      <h3>登録商品編集画面</h3>
        <div class="product-img" style="margin-top: 20px;">
        <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150" %>   
        </div>
      <table class="table table-striped">
        
          <tr>
          <th>商品画像</th>
          <td><%= f.attachment_field :image %></td>
          </tr>
          
        <tr>
        <th>商品名</th>
        <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
        
        <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
        </tr>
        
        <tr>
        <th>税込価格</th>
        <td><%= f.text_field :price, class: "form-control" %></td>
        </tr>
        
        <tr>
        <th>販売ステータス</th>
        <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
        </tr>
        </table>
        <%= f.submit '更新', class:"btn btn-success" %>
    <% end %>
  </div>
  </div>
</section>