<section class="top-section text-center">
  <div class="row">
    <div class="col-lg-12 col-lg-offset-1">
      <%= form_with model: @item, url: admins_items_path, method: :post, local:true do |f| %>
        <h2>商品新規登録フォーム</h2>
      <div class="product-img" style="margin-top: 20px;">
        <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150" %>
      </div>
      <tbody>
    <table class="table table-striped">
        <tr>
          <th>商品画像</th>
            <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
            <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
        </tr>
        <tr>
          <th>商品名</th>
            <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
            <td><%= f.text_area :introduction %></td>
        </tr>

        <tr>
          <th>税抜価格</th>
            <td><%= f.number_field :price %></td>
        </tr>
    </table>
          <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
    </tbody>

  </div>
      <% end %>
  </div>
</section>
