<section class="top-section text-center">
  <div class="row">
  <div class="col-lg-12 col-lg-offset-1">

    <h1>登録商品詳細</h1>
          <div class="product-img" style="margin-top: 20px;">
        <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150" %>
          </div>
    <table class="table table-striped">
                <tbody>
            <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
            </tr>

            <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
            </tr>

            <tr>
            <td>税込価格</td>
            <td><%= @item.price %></td>
            </tr>

            <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == false %>
              販売中
            <% else %>
              販売停止中
            <% end %>
            </td>
            </tr>
          </tbody>
        </table>
          <%= link_to "編集", edit_admins_item_path(@item.id), class:"btn btn-success"%>
      </div>
  </div>
  </div>
</section>