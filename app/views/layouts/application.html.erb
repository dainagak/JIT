<!DOCTYPE html>
<html>
  <head>
    <title>Jit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
  <% if admin_signed_in? %>
    <!--<li>-->
    <!--  <%#= link_to 'ジャンル一覧', admin_genres_path %>-->
    <!--</li>-->
    <li>
      <%= link_to '商品一覧', admins_items_path %>
    </li>
    <li>
      <%= link_to '会員一覧', admins_customers_path %>
    </li>
    <li>
      <%= link_to '注文履歴一覧', admins_orders_path %>
    </li>
    <li>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    </li>
  <% elsif customer_signed_in? %>
    <li>
      <%= link_to 'マイページ', customers_path %>
    </li>
    <li>
      <%= link_to '商品一覧', items_path %>
    </li>
    <li>
      <%= link_to 'カート画面', cart_items_path %>
    </li>
    <li>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
    </li>

  <% else %>
    <li>
      <%= link_to "会員登録", new_customer_registration_path %>
    </li>
    <li>
      <%= link_to "ログイン", new_customer_session_path %>
    </li>
  <% end %>
</header>
  <body>
    <%= yield %>
  </body>
</html>
